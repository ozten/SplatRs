{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "GaussianViewer",
  "version": "0.1.0",
  "identifier": "com.splatrs.viewer",
  "build": {
    "frontendDist": "./ui"
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "app": {
    "windows": [
      {
        "title": "Gaussian Splatting Viewer",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
